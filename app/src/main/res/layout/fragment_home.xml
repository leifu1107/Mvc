<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="叠几行落叶随风的小字，停泊指尖，于心的宁静中，藏一掬思念，轻轻落凡尘。这点滴的心思，汇聚在无声的雨里，捎去遥远的梦想，寻思着，这花香烟火，一沓沓，恰好可以，恰好能够，落入相逢的城池。"/>

    <leifu.mvc.utils.TextVerticalScrollUtils
        android:id="@+id/tv_verticalscroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text9"/>

    <leifu.mvc.utils.TextVerticalScrollMoreUtils
        android:id="@+id/tv_verticalscrollmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></leifu.mvc.utils.TextVerticalScrollMoreUtils>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m50"
        android:hint="验证手机号码"/>

    <TextView
        android:id="@+id/tv_event"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m20"
        android:text="EventBus传值测试"/>

    <ImageView
        android:id="@+id/iv_layoutManager"
        android:layout_width="@dimen/m25"
        android:layout_height="@dimen/m25"
        android:src="@mipmap/ic_switch2"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>